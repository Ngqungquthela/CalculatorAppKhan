<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#242424"
    android:padding="@dimen/borders"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textViewNumbers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/between"
        android:text="0"
        android:textColor="#FFFFFF"
        android:textSize="96sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonDivide"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/buttonDivide"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="@dimen/between"
        android:layout_marginBottom="@dimen/between"
        android:text="/"
        android:textSize="40sp"
        android:onClick="numClick"
        app:layout_constraintBottom_toTopOf="@+id/buttonTimes"
        app:layout_constraintStart_toEndOf="@+id/buttonMod" />

    <Button
        android:id="@+id/buttonMod"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="@dimen/between"
        android:layout_marginBottom="@dimen/between"
        android:text="%"
        android:textSize="40sp"
        android:onClick="numClick"
        app:layout_constraintBottom_toTopOf="@+id/button9"
        app:layout_constraintStart_toEndOf="@+id/buttonClear" />

    <Button
        android:id="@+id/buttonClear"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="172dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/between"
        android:text="CLEAR"
        android:textSize="40sp"
        android:onClick="numClick"
        app:layout_constraintBottom_toTopOf="@+id/button7"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonTimes"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="@dimen/between"
        android:layout_marginBottom="@dimen/between"
        android:text="*"
        android:textSize="40sp"
        android:onClick="numClick"
        app:layout_constraintBottom_toTopOf="@+id/buttonMinus"
        app:layout_constraintStart_toEndOf="@+id/button9" />

    <Button
        android:id="@+id/button9"
        style="@style/numsBackground"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="@dimen/between"
        android:layout_marginBottom="@dimen/between"
        android:text="9"
        android:textSize="40sp"
        android:onClick="numClick"
        app:layout_constraintBottom_toTopOf="@+id/button6"
        app:layout_constraintStart_toEndOf="@+id/button8" />

    <Button
        android:id="@+id/button8"
        style="@style/numsBackground"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="@dimen/between"
        android:layout_marginBottom="@dimen/between"
        android:text="8"
        android:textSize="40sp"
        android:onClick="numClick"
        app:layout_constraintBottom_toTopOf="@+id/button5"
        app:layout_constraintStart_toEndOf="@+id/button7" />

    <Button
        android:id="@+id/button7"
        style="@style/numsBackground"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/between"
        android:text="7"
        android:textSize="40sp"
        android:onClick="numClick"
        app:layout_constraintBottom_toTopOf="@+id/button4"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonMinus"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="@dimen/between"
        android:layout_marginBottom="@dimen/between"
        android:text="-"
        android:textSize="40sp"
        android:onClick="numClick"
        app:layout_constraintBottom_toTopOf="@+id/buttonPlus"
        app:layout_constraintStart_toEndOf="@+id/button6" />

    <Button
        android:id="@+id/button6"
        style="@style/numsBackground"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="@dimen/between"
        android:layout_marginBottom="@dimen/between"
        android:text="6"
        android:textSize="40sp"
        android:onClick="numClick"
        app:layout_constraintBottom_toTopOf="@+id/button3"
        app:layout_constraintStart_toEndOf="@+id/button5" />

    <Button
        android:id="@+id/button5"
        style="@style/numsBackground"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="@dimen/between"
        android:layout_marginBottom="@dimen/between"
        android:text="5"
        android:textSize="40sp"
        android:onClick="numClick"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintStart_toEndOf="@+id/button4" />

    <Button
        android:id="@+id/button4"
        style="@style/numsBackground"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/between"
        android:text="4"
        android:textSize="40sp"
        android:onClick="numClick"
        app:layout_constraintBottom_toTopOf="@+id/button1"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonPlus"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="@dimen/between"
        android:layout_marginBottom="@dimen/between"
        android:text="+"
        android:textSize="40sp"
        android:onClick="numClick"
        app:layout_constraintBottom_toTopOf="@+id/buttonEquals"
        app:layout_constraintStart_toEndOf="@+id/button3" />

    <Button
        android:id="@+id/button3"
        style="@style/numsBackground"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="@dimen/between"
        android:layout_marginBottom="@dimen/between"
        android:text="3"
        android:textSize="40sp"
        android:onClick="numClick"
        app:layout_constraintBottom_toTopOf="@+id/button."
        app:layout_constraintStart_toEndOf="@+id/button2" />

    <Button
        android:id="@+id/button2"
        style="@style/numsBackground"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="@dimen/between"
        android:layout_marginBottom="@dimen/between"
        android:text="2"
        android:textSize="40sp"
        android:onClick="numClick"
        app:layout_constraintBottom_toTopOf="@+id/button0"
        app:layout_constraintStart_toEndOf="@+id/button1" />

    <Button
        android:id="@+id/button1"
        style="@style/numsBackground"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/between"
        android:text="1"
        android:textSize="40sp"
        android:onClick="numClick"
        app:layout_constraintBottom_toTopOf="@+id/button0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonEquals"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/between"
        android:text="="
        android:textSize="40sp"
        android:onClick="numClick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button." />

    <Button
        android:id="@+id/button."
        style="@style/numsBackground"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/between"
        android:text="."
        android:textSize="40sp"
        android:onClick="numClick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button0" />

    <Button
        android:id="@+id/button0"
        style="@style/numsBackground"
        android:layout_width="172dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:text="0"
        android:textSize="40sp"
        android:onClick="numClick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>